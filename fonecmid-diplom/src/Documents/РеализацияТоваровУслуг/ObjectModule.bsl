			Сообщение.Текст = "Не удалось получить номенклатуру.";
			Сообщение.Сообщить();
			Возврат;
		КонецЕсли;
		Товары.Очистить();
		СтрокаТЧ = Товары.Добавить();
		СтрокаТЧ.Номенклатура = Выборка.НоменклатураАбонентскаяПлата;
		СтрокаТЧ.Сумма = Выборка.СуммаАбонентскойПлаты; 
		
		Если ЗначениеЗаполнено(Выборка.ДоговорВыполненыеРаботы) Тогда
			Услуги.Очистить();
			СтрокаТЧ = Услуги.Добавить();
			СтрокаТЧ.Номенклатура = Выборка.НоменклатураРаботыСпециалиста;
			СтрокаТЧ.Сумма = Выборка.СуммаКОплатеОборот;
			СтрокаТЧ.Количество = Выборка.КоличествоЧасовОборот;
			СтрокаТЧ.Цена = СтрокаТЧ.Сумма / СтрокаТЧ.Количество; 
		КонецЕсли;
		
	КонецЦикла; 
	 // --
